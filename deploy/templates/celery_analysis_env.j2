CELERYD_NODES="analysisworker qcworker rsyncstorage fastfnop"
CELERY_BIN="{{ kantelevenv }}/bin/celery"
CELERYD_MULTI="multi"
CELERY_APP="kantele"
CELERYD_OPTS="-c:analysisworker 3 -c:qcworker 2 -c:rsyncstorage 1 -c:fastfnop 1 -Q:analysisworker '{{ inventory_hostname }}__{{ analysis_queue }}' -Q:qcworker '{{ inventory_hostname }}__{{ qc_queue }}' -Q:rsyncstorage '{{ inventory_hostname }}__{{ queue_rsyncstorage }}' -Q:fastfnop '{{ inventory_hostname }}__{{ queue_fastfnop }}' --statedb={{ kantelelogdir }}/%n%I.state"
CELERYD_LOG_LEVEL="INFO"
CELERYD_LOG_FILE="{{ kantelelogdir }}/%n%I.log"
CELERYD_PID_FILE="{{ kantelelogdir }}/%n%I.pid"
CELERYD_USER="{{ kanteleuser }}"
CELERYD_GROUP="{{ kantelegroup }}"
CELERY_CREATE_DIRS=1
KANTELEHOST="{{ kantele_host }}"
PROTOCOL=https
RABBITHOST={{ rabbithost }}
RABBIT_VHOST={{ mq_vhost }}
RABBITPASS={{ amqppass }}
RABBITUSER={{ rabbituser }}

TMPDIR={{ scratch_dir if scratch_dir is defined else '/tmp' }}

CELERY_PREFETCH=1
SECRET_KEY={{ secret_key }}
APIKEY={{ analysis_apikey }}
NEXTFLOW_RUNDIR="{{ baserun_dir }}"

THERMOKEY=SampleID
BRUKERKEY=Description

SNKEY="{{ spectronaut_license_key }}"
